<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#D5681A" />
            <stroke
                android:width="1dp"
                android:color="#D5681A" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#E84C3D"
                android:endColor="#C23A2C"
                android:angle="270"/>
            <stroke
                android:width="1dp"
                android:color="#E84C3D" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>